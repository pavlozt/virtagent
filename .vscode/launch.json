    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sudo Build and Debug",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "asRoot": true,
            // "program": "${fileDirname}",
            "console": "integratedTerminal",
            "program": "${fileDirname}/__debug_bin",
            "preLaunchTask": "go: build (debug)",
            "args": ["-i","eth0","-simulaterouter", "172.23.160.222","-iprange", "172.200.0.1-172.200.0.10","-loglevel", "trace"]

        },
        {
            "name": "Remote Docker App",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 4000,
            "host": "127.0.0.1"
        }
    ]
}